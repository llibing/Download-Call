<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/area_margin_left"
    android:layout_marginRight="@dimen/area_margin_left"
    android:layout_marginTop="10dp"
    android:paddingTop="@dimen/area_padding_top"
    android:paddingBottom="@dimen/area_padding_top"
    android:background="@drawable/area_round_bg"
    >
      <TextView 
        android:layout_width="match_parent"
      	android:layout_height="wrap_content"
      	android:paddingLeft="@dimen/common_title_padding_left"
