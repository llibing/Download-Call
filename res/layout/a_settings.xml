<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/area_margin_left"
    android:layout_marginRight="@dimen/area_margin_left"
    android:layout_marginTop="10dp"
    android:paddingTop="@dimen/area_padding_top"
    android:paddingBottom="@dimen/area_padding_top"
    android:background="@drawable/area_round_bg"
    >
      <TextView 
        android:layout_width="match_parent"
      	android:layout_height="wrap_content"
      	android:textColor="@color/normal_text_color"
      	android:paddingLeft="@dimen/common_title_padding_left"
      	android:text="拨打时间间隔(秒)"
      />
      <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingTop="8dp"
    	android:paddingLeft="@dimen/common_title_padding_left"
    	android:orientation="horizontal"
          >
        <EditText
            android:id="@+id/input_call_internal"
	        android:layout_width="0dp"
	        android:layout_height="28dp"
	        android:layout_weight="1"
	        android:background="@drawable/input_box_bg"
	        android:textColor="@color/input_text"
	        android:textSize="@dimen/txt_size_px_20"
	        android:textColorHint="#8d8d90"
	        android:paddingTop="0dp"
	        android:paddingBottom="0dp"
	        android:gravity="center_vertical"
	            />
        <com.fgc.autocall.ui.component.ButtonTwoState
	        android:id="@+id/btn_call_internal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:layout_gravity="right|center_vertical"
	        android:layout_marginRight="@dimen/title_padding"
	        android:layout_marginLeft="@dimen/title_padding"
	        android:background="@drawable/btn_edit"
	        />   
          
      </LinearLayout>
    
    
</LinearLayout>


